# FastAPI Configuration
DEBUG=true
SECRET_KEY=your-secret-key-here
API_V1_STR=/api/v1
PROJECT_NAME=Circularity Nexus

# Database Configuration
DATABASE_URL=sqlite:///./circularity_nexus.db

# Groq AI Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=your-hedera-private-key-here

# Token Configuration
WASTE_TOKEN_SYMBOL=WASTE
CARBON_TOKEN_SYMBOL=CARBON
RECYCLING_CERTIFICATE_SYMBOL=RECYCLE

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/circularity_nexus.log

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.8
CARBON_CALCULATION_PRECISION=2

# Blockchain Configuration
HCS_TOPIC_ID=0.0.YOUR_TOPIC_ID
TOKEN_DECIMALS=8
GAS_LIMIT=300000

# DeFi Configuration
STAKING_REWARD_RATE=0.05  # 5% APY
LIQUIDITY_POOL_FEE=0.003  # 0.3%

# Smart Bin Configuration
SMART_BIN_UPDATE_INTERVAL=300  # 5 minutes
BIN_CAPACITY_THRESHOLD=0.8  # 80%

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
