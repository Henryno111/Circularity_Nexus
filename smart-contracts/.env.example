# Hedera Network Configuration
HEDERA_TESTNET_PRIVATE_KEY=your_testnet_private_key_here
HEDERA_PREVIEWNET_PRIVATE_KEY=your_previewnet_private_key_here  
HEDERA_MAINNET_PRIVATE_KEY=your_mainnet_private_key_here

# Account IDs (for Hedera SDK operations)
HEDERA_TESTNET_ACCOUNT_ID=0.0.YOUR_TESTNET_ACCOUNT_ID
HEDERA_PREVIEWNET_ACCOUNT_ID=0.0.YOUR_PREVIEWNET_ACCOUNT_ID
HEDERA_MAINNET_ACCOUNT_ID=0.0.YOUR_MAINNET_ACCOUNT_ID

# HashScan API Key (for contract verification)
HASHSCAN_API_KEY=your_hashscan_api_key_here

# Gas Reporting
REPORT_GAS=true

# Deployment Configuration
DEPLOY_GAS_LIMIT=3000000
DEPLOY_GAS_PRICE=2000000000

# Token Configuration
INITIAL_SUPPLY=1000000000000000000000000  # 1 million tokens with 18 decimals
TOKEN_NAME="Circularity Nexus Token"
TOKEN_SYMBOL="CIRC"

# Oracle Configuration (Chainlink)
CHAINLINK_ORACLE_ADDRESS=0x...
PRICE_FEED_ADDRESS=0x...

# Development
DEBUG=true